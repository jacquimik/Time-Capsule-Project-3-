<div class="event-show">
<h1><%= @event["name"] %></h1>

	<div class="event-info">
		<div class="large-6 columns">
			<p><b>Date: </b><%= @event.date.strftime '%B %m %Y' %></p>
			<p><b>Location: </b><%= @event.location %></p>
			<p><b>Description </b><%= @event.description %></p>
			<div class="event-image">
				<p><%= image_tag @event.image %></p>
			</div>
		</div>

		<div class="large-6 columns">
			<div class="google-map"><p><%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@event.latitude}%2C#{@event.longitude}" %><p>
			</div>
						<%= link_to 'Edit Event', edit_child_event_path, :class => 'button' %><br>
			<%= link_to 'Back to events', child_events_path(@child), :class => 'button' %>
		</div>

	</div>


</div>